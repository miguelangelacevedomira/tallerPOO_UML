   
        int numeroEntero = 10;
        double numeroDecimal = 5.75;
        char caracter = 'A';
        String texto = "Hola Mundo";
        boolean esVerdadero = true;
 
        System.out.println("Entero: " + numeroEntero);
        System.out.println("Decimal: " + numeroDecimal);
        System.out.println("Caracter: " + caracter);
        System.out.println("Texto: " + texto);
        System.out.println("Booleano: " + esVerdadero);

        System.out.println("Suma: " + (numeroEntero + 5));
        System.out.println("Resta: " + (numeroEntero - 3));
        System.out.println("Multiplicación: " + (numeroEntero * 2));
        System.out.println("División: " + (numeroEntero / 2));
        System.out.println("Módulo: " + (numeroEntero % 3));

     
        System.out.println("¿10 < 20? " + (10 < 20));
        System.out.println("¿10 > 20? " + (10 > 20));
        System.out.println("¿10 == 10? " + (10 == 10));
        System.out.println("¿10 != 5? " + (10 != 5));
        
      boolean condicion1 = true;
        boolean condicion2 = false;
        System.out.println("AND lógico: " + (condicion1 && condicion2));
        System.out.println("OR lógico: " + (condicion1 || condicion2));
        System.out.println("NOT lógico: " + (!condicion1));

